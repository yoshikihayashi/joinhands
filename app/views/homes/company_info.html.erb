<header class="header-info">
  <% if company_signed_in? %>
    <ul>
      <li>
        <%= link_to "JOIN HANDS", root_path, class: "header-logo" %>
      </li>
      <li>
        <%= render 'searchs/form' %>
      </li>
      <li>
        <%= link_to 'インフルエンサー一覧', companies_path,class: "header-btn" %>
      </li>
      <li>
        <%= link_to '案件一覧', projects_path ,class: "header-btn" %>
      </li>
      <li>
        <%= link_to '投稿フォーム', new_project_path ,class: "header-btn" %>
      </li>
      <li>
        <%= link_to 'マイページ', company_path(current_company.id) ,class: "header-btn" %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_company_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} ,class: "header-btn" %>
