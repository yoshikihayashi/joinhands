<button type="button" class="button-11" data-toggle="modal" data-target="#exampleModal">→</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">レビュー内容</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="review-modal">
          <% @company_reviews.each do |company_review| %>
           <div class="review-modal-star" id="star-rate-<%= company_review.id %>"></div>
           <script>
           $('#star-rate-<%= company_review.id %>').raty({
             size: 12,
             starOff:  '<%= asset_path('star-off.png') %>',
             starOn : '<%= asset_path('star-on.png') %>',
             starHalf: '<%= asset_path('star-half.png') %>',
             scoreName: 'influencer[rate]',
             scoreName: 'company[rate]',
             half: true,
             readOnly: true,
             score: <%= company_review.rate %>,
           });
           </script>
           <div class="review-modal-star"><%= company_review.comment %></div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>