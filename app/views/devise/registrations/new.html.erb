<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :company_name ,"会社名"%><br />
    <%= f.text_field :company_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :representative_name ,"代表者名" %><br />
    <%= f.text_field :representative_name , autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :business_detail ,"事業内容" %><br />
    <%= f.text_field :business_detail , autofocus: true %>
  </div>
   <div class="field">
    <%= f.label :employee_number ,"従業員数"  %><br />
    <%= f.number_field :employee_number , autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :phone_number , "電場番号" %><br />
    <%= f.text_field :phone_number , autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
