<!DOCTYPE html>
<html>
  <head>
    <title>JOIN HANDS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <nav class="navbar navbar-expand-lg navbar-light">
        <% if influencer_signed_in? %>
          <a class="navbar-brand"><%= link_to "JOIN HANDS", influencers_path, class: "header-logo" %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <li class="search">
                <%= render 'searchs/form' %>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to '案件一覧', influencers_path ,class: "header-btn" %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to 'マイページ', influencer_path(current_influencer.id) ,class: "header-btn" %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to '通知', influencer_projects_path(current_influencer.id) ,class: "header-btn" %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled">
                  <%= link_to "ログアウト", destroy_influencer_session_path, method: :delete , data: {confirm: "ログアウトしますか？"} ,class: "header-btn"%>
                </a>
              </li>
            </ul>
          </div>
        <% else %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link"><%= link_to "新規登録 for influencer", new_influencer_registration_path ,class: "header-btn" %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to "ログイン for influencer", new_influencer_session_path ,class: "header-btn" %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"><%= link_to "ゲストログイン for influencer", influencers_guest_sign_in_path, method: :post ,class: "header-btn" %></a>
              </li>
            </ul>
          </div>
        <% end %>
      </nav>
    </header>
    <% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>