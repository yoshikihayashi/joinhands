<!DOCTYPE html>
<html>
  <head>
    <title>JOIN HANDS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header class="header-info">
      <% if influencer_signed_in? %>
      <ul>
        <li class="header-logo">
          <%= link_to "JOIN HANDS", root_path, class: "header-logo" %>
        </li>
        <li class="search">
          <%= render 'searchs/form' %>
        </li>
        <li>
          <%= link_to '案件一覧', influencers_path ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to 'マイページ', influencer_path(current_influencer.id) ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to '通知', influencer_projects_path(current_influencer.id) ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_influencer_session_path, method: :delete , data: {confirm: "ログアウトしますか？"} ,class: "header-btn"%>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録 for influencer", new_influencer_registration_path ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to "ログイン for influencer", new_influencer_session_path ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to "ゲストログイン for influencer", influencers_guest_sign_in_path, method: :post ,class: "header-btn" %>
        </li>
      </ul>
      <% end %>
    </header>
    <% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
