<!DOCTYPE html>
<html>
  <head>
    <title>JOIN HANDS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header class="header-info">
      <!--<link rel=”icon” href=“assets/images/favicon.ico”>-->
      <% if influencer_signed_in? %>
      <ul>
        <li>
          <%= link_to 'マイページ', influencer_path(current_influencer.id) ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to '仮ボタン', influencer_projects_path(current_influencer.id) ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_influencer_session_path, method: :delete , data: {confirm: "ログアウトしますか？"} ,class: "header-btn"%>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録 for influencer", new_influencer_registration_path ,class: "header-btn" %>
        </li>
        <li>
          <%= link_to "ログイン for influencer", new_influencer_session_path ,class: "header-btn" %>
        </li>
      </ul>
      <% end %>
      <!--for influencer page-->
    </header>

    <%= yield %>

  </body>
</html>
