
<%= attachment_image_tag @influencer_project.project, :image, format: 'jpeg', size: "200x200" %>

  <p>案件タイトル : <%= @influencer_project.project.title %></p>
  <p>案件内容 : <%= @influencer_project.project.details %></p>
  <p>説明文：<%= @influencer_project.message %></p>
  <p>会社名：<%= @influencer_project.project.company.company_name %></p>
<%= form_with model: @influencer_project do |form| %>
  <%= form.select :status, InfluencerProject.statuses.map{|key,value| [I18n.t("enums.influencer_project.status.#{key}"),value]}, {} %>
  <%= form.submit "更新する" %>
<% end %>

