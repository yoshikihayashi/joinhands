<h2 class="subject">申請詳細</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= attachment_image_tag @influencer_project.project, :image, format: 'jpeg', size: "250x250" %>
    </div>
     <div class="col-lg-8">
      <%= link_to project_path(@influencer_project.project.id),class: 'btn-project' do %>
        <p>【 <%= @influencer_project.project.title %> 】</p>
      <% end %>
      <p>【 案件内容 】<%= @influencer_project.project.details %></p>
      <p>【 企業からのメッセージ 】<%= @influencer_project.message %></p>
      <p>【 企業名 】<%= @influencer_project.project.company.company_name %></p>
      <%= form_with model: @influencer_project do |form| %>
        <%= form.select :status, @statuses, {} %>
        <%= form.text_area :influencer_message , cols: 40,:placeholder=>"承諾の場合はご連絡先の入力をお願い致します。" %>
        <%= form.submit "送信する" %>
      <% end %>
     </div>
  </div>
</div>

