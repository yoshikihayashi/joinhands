<% if @model == 'tag' %>
<h2 class="subject">タグ検索ワード: <%= @content %></h2>
<% @records.each do |tag| %>
    <div class="card">
      <div class="tags">
        <%= tag.name %>
      </div>
    </div>
<% end %>
<% else @model == 'projects' %>
  <h2 class="subject">案件検索ワード: <%= @content %></h2>
  <% @records.each do |project| %>
    <div class="card">
      <%= attachment_image_tag project, :image, format: 'jpeg', size: "250x250" %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.details %></td>
      </tr>
    </div>
  <% end %>
<% end %>