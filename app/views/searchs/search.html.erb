

  <% if @model == 'tag' %>
    <h2 class="subject">検索ワード：インフルエンサー : <%= @content %></h2>
    <% @records.each do |tag| %>
      <div class="card">
        <%#= attachment_image_tag influencer, :image, format: 'jpeg',size: "250x250" %>
        <%#= link_to project_path(@project.id) do %>
          <%= tag.name %><br>
        <%# end %>
      </div>
    <% end %>
  <% else @model == 'projects' %>
    <h2 class="subject">検索ワード：案件 : <%= @content %></h2>
      <% @records.each do |project| %>
      <div class="card">
      <%= attachment_image_tag project, :image, format: 'jpeg', size: "250x250" %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.details %></td>
        </tr>
      </div>
      <% end %>
  <% end %>